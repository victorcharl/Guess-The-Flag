<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/remaining_try"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="@string/your_lives"
            android:textSize="20sp"
            app:fontFamily="@font/bangers" />

        <TextView
            android:id="@+id/stage_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|top"
            android:text="@string/stage_number"
            android:textSize="24sp"
            app:fontFamily="@font/bangers" />

        <TextView
            android:id="@+id/your_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="right|end"
            android:text="@string/yourScore"
            android:textSize="20sp"
            app:fontFamily="@font/bangers" />

    </LinearLayout>

    <ImageView
        android:id="@+id/picture_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:layout_weight="3"
        android:background="@drawable/curved_edge_button"
        android:contentDescription="@string/missing_content"
        android:padding="10dp"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight=".5"
        android:background="@drawable/curved_edge_button" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight=".5"
        android:background="@drawable/curved_edge_button" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_weight=".5"
        android:background="@drawable/curved_edge_button" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:layout_weight=".5"
        android:background="@drawable/curved_edge_button" />

</LinearLayout>